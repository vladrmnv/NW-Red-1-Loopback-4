{
    "name": "@nw/demo-angular",
    "version": "0.0.0",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "start:watch": "ng build --watch",
        "build": "ng build",
        "test": "ng test",
        "lint": "ng lint",
        "e2e": "ng e2e",
        "sdk:getspec": "curl localhost:3000/openapi.json > ./sdk/openapi.json",
        "sdk:convert": "api-spec-converter --from=openapi_3 --to=swagger_2 --syntax=json --order=alpha sdk/openapi.json > sdk/swagger.json; sed -i.bak s/x-operation-name/operationId/g sdk/swagger.json;     rm sdk/swagger.json.bak",
        "sdk:generate": "./node_modules/.bin/swagger-angular-generator -s sdk/swagger.json -d sdk",
        "sdk": "npm run sdk:getspec; npm run sdk:convert; npm run sdk:generate"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^6.1.0",
        "@angular/common": "^6.1.0",
        "@angular/compiler": "^6.1.0",
        "@angular/core": "^6.1.0",
        "@angular/forms": "^6.1.0",
        "@angular/http": "^6.1.0",
        "@angular/platform-browser": "^6.1.0",
        "@angular/platform-browser-dynamic": "^6.1.0",
        "@angular/router": "^6.1.0",
        "@ngrx/effects": "^6.1.0",
        "@ngrx/store": "^6.1.0",
        "@nw/demo-server": "^1.0.0",
        "core-js": "^2.5.4",
        "rxjs": "~6.2.0",
        "rxjs-compat": "^6.3.3",
        "zone.js": "~0.8.26"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~0.8.0",
        "@angular/cli": "~6.2.5",
        "@angular/compiler-cli": "^6.1.0",
        "@angular/language-service": "^6.1.0",
        "@types/jasmine": "~2.8.8",
        "@types/jasminewd2": "~2.0.3",
        "@types/node": "~8.9.4",
        "codelyzer": "~4.3.0",
        "jasmine-core": "~2.99.1",
        "jasmine-spec-reporter": "~4.2.1",
        "karma": "~3.0.0",
        "karma-chrome-launcher": "~2.2.0",
        "karma-coverage-istanbul-reporter": "~2.0.1",
        "karma-jasmine": "~1.1.2",
        "karma-jasmine-html-reporter": "^0.2.2",
        "protractor": "~5.4.0",
        "swagger-angular-generator": "^2.1.1",
        "ts-node": "~7.0.0",
        "tslint": "~5.11.0",
        "typescript": "~2.9.2"
    }
}
